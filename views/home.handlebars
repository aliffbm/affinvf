      <![endif]-->        
    </head>

    <body>
      <nav class="navbar navbar-fixed-top navbarColor" id="navbar-default-override">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target="#myNavbar">

              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
            </button>
            <a class="navbar-brand" href="#">Affiniate</a>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/home" id="home">Home</a></li>
              <li><a href="/chores">Chores</a></li>
              <li><a href="/statistics">Statistics</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/"><span class="glyphicon glyphicon-log-in"></span> Log out</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid" id="homePageIn">

       <div class="container" id="containerHome">
        {{#each user}}
        <h1 style="text-align:center; padding-bottom: 10px;">Hello, {{name}}!!</h1>

        <div class="container" id="innerContainerHome">
          <div class="row" id="task_to_complete_home">

      <div class="col-sm-12 text-center">

        <div class="col-sm-7" id="size_of_task_div">
               <div class="col-sm-12" id="task_text_container_header">
                <h3>Your task is {{currentChore}}</h3>

                <img width="250" src="{{image}}" id="isChoreAssigned"/>

                <p># of days to Complete: {{daysToComplete}}</p>

              </div>
              <!--Complete chore Button with CheckMark-->
              <div class="col-sm-12 text-center" id="complete_chore_btn" style="display: none;">
 
               <img width=60 src="../images/svg/checkMark.svg" style="margin:auto;">                
             </div>

             <!--End CheckMArk-->
             <!--To Request a chore if task is already assigned-->
             <div class="col-sm-3" style="visibility: hidden;">
              <button type="button" style="border-radius:150px; margin-top: 10px;" class="btn btn-primary pull-left">Request Chore</button> 
            </div>

      </div>
      <br>
          <div class="col-sm-5">
          <br>
           <p>{{wordsToEncourage}}</p>
           <ul id="myTaskSentiment">
            <li><img src="../images/happyCartWheel.png"/>Feel better</li>
            <li><img src="../images/money.png"/> Don't have to spend money to eat out</li>
          </ul>
          </div>

      </div>
      {{/each}}



    </div>
    <div class="row" id="rowHomeEmoticons">	
    </div>
  </div>
</div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>
